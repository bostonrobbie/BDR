# BDR Outreach System - Environment Variables
# Copy this to .env and fill in your values.

# ─── Database ────────────────────────────────────────────────
# Path to the SQLite database file.
OCC_DB_PATH=outreach.db

# SQLite journal mode. Use WAL for production, DELETE for testing.
OCC_JOURNAL_MODE=WAL

# ─── LLM (Ollama) ───────────────────────────────────────────
# Ollama server URL. Default: local Ollama instance.
OLLAMA_HOST=http://127.0.0.1:11434

# Model to use for LLM calls.
OLLAMA_MODEL=qwen2.5:7b

# Timeout for LLM calls in seconds.
OLLAMA_TIMEOUT_SECONDS=120

# Optional fallback LLM provider (e.g., "openai").
# LLM_FALLBACK_PROVIDER=

# ─── API Server ──────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ─── Pipeline ────────────────────────────────────────────────
# Max parallel workers for swarm agent execution.
PIPELINE_MAX_WORKERS=3

# Auto-approve messages without human review gate.
PIPELINE_AUTO_APPROVE=true

# ─── Logging ─────────────────────────────────────────────────
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: "text" for human-readable, "json" for structured/machine-parseable.
LOG_FORMAT=text

# Optional log file path. Leave empty for stdout only.
# LOG_FILE=logs/bdr.log

# ─── Feature Flags ───────────────────────────────────────────
# Enable the memory layer (competitor intel, call notes, etc.)
ENABLE_MEMORY_LAYER=true

# Enable file watcher for auto-processing inbox uploads.
ENABLE_FILE_WATCHER=false
